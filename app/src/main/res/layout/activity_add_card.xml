<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addCardView"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/insertQuestion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:inputType="textMultiLine"
        android:hint="Enter a Question here"
        />

    <EditText
        android:id="@+id/insertAnswer1"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_alignStart="@+id/insertQuestion"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="140dp"
        android:hint="Enter an incorrect Answer here" />

    <EditText
        android:id="@+id/insertAnswer2"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_alignStart="@+id/insertQuestion"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="210dp"
        android:hint="Enter the correct Answer here" />

    <EditText
        android:id="@+id/insertAnswer3"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_alignStart="@+id/insertQuestion"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="280dp"
        android:hint="Enter another incorrect Answer here" />

    <ImageView
        android:id="@+id/archiveQuestAns"
        android:layout_width="95dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_archive_black_24dp" />

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="95dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/ic_remove_circle_outline_black_24dp" />
</RelativeLayout>